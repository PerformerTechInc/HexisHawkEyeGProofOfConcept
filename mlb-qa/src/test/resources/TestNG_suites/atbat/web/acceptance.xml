<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose="1" name="MLB - At Bat Web - Acceptance" skipfailedinvocationcounts="false" junit="false" parallel="methods" data-provider-thread-count="5" annotations="JDK"> 
	<test verbose="1" name="AtBat - Team - Roster Test">
	    <parameter name="{excel_ds_args}" value="TUID;team_shortcode"/> 
		<parameter name="{excel_ds_uid}" value="TUID"/>
	    <parameter name="{excel_ds_file}" value="XLS_data/atbat_web.xls"/>
	    <parameter name="{excel_ds_sheet}" value="team_name"/>	
		<classes>
			<class name="com.mlb.qa.tests.atbat.web.AtBatRosterTest">
				<methods>
				    <include name="checkRosterList"/>
				</methods>
			</class>
		</classes>
	</test>
	<test verbose="1" name="AtBat - Team - Player Card Opens Test">
	    <parameter name="{excel_ds_args}" value="TUID;team_shortcode"/> 
		<parameter name="{excel_ds_uid}" value="TUID"/>
	    <parameter name="{excel_ds_file}" value="XLS_data/atbat_web.xls"/>
	    <parameter name="{excel_ds_sheet}" value="team_name"/>	
		<classes>
			<class name="com.mlb.qa.tests.atbat.web.AtBatRosterTest">
				<methods>
				    <include name="checkPlayerCards"/>
				</methods>
			</class>
		</classes>
	</test>
	<test verbose="1" name="AtBat - Team - Player Mugshot Test">
	    <parameter name="{excel_ds_args}" value="TUID;team_shortcode"/> 
		<parameter name="{excel_ds_uid}" value="TUID"/>
	    <parameter name="{excel_ds_file}" value="XLS_data/atbat_web.xls"/>
	    <parameter name="{excel_ds_sheet}" value="team_name"/>	
		<classes>
			<class name="com.mlb.qa.tests.atbat.web.AtBatRosterTest">
				<methods>
				    <include name="checkPlayerMugshots"/>
				</methods> 
			</class>
		</classes>
	</test>
	<test verbose="1" name="AtBat - Team - Standings Highlight Test">
	    <parameter name="{excel_ds_args}" value="TUID;team_shortcode"/> 
		<parameter name="{excel_ds_uid}" value="TUID"/>
	    <parameter name="{excel_ds_file}" value="XLS_data/atbat_web.xls"/>
	    <parameter name="{excel_ds_sheet}" value="team_name"/>	
		<classes>
			<class name="com.mlb.qa.tests.atbat.web.AtBatStandingsTest">
			    <methods>
			    	<exclude name="checkStandingsLegend"/>
				</methods>
			</class>
		</classes>
	</test>
	<test verbose="1" name="AtBat - Standings Playoff Legend Check">	
		<classes>
			<class name="com.mlb.qa.tests.atbat.web.AtBatStandingsTest">
			    <methods>
			        <include name="checkStandingsLegend"/>
			    	<exclude name="checkStandingsFavoriteTeamHighlighted"/>
				</methods>
			</class>
		</classes>
	</test>	
</suite>